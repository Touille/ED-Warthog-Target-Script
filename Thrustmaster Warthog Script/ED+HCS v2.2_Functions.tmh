	int initToggleCamera(){
		sCameraMode=!sCameraMode;	//reverse the flag status
		ActKey(KEYON+PULSE+ClassifiedCamera);
		if(sCameraMode){
			ActKey(KEYON+PULSE+SetSpeed0);
